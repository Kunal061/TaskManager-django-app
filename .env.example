DEBUG=False
ALLOWED_HOSTS=13.233.122.241,localhost,127.0.0.1

# Database settings (SQLite - Simple)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=/app/db.sqlite3
DB_USER=
